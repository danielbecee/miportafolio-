---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const skills = [
  { name: 'PHP', category: 'backend' },
  { name: 'Laravel', category: 'backend' },
  { name: 'MySQL', category: 'backend' },
  { name: 'APIs REST', category: 'backend' },
  { name: 'JavaScript', category: 'frontend' },
  { name: 'HTML5/CSS3', category: 'frontend' },
  { name: 'Git', category: 'tools' },
  { name: 'Postman', category: 'tools' },
];

const featuredProjects = [
  {
    title: 'Arreglos Azucena',
    description: 'Sitio web profesional en producción. Desarrollo backend con PHP y MySQL.',
    tags: ['PHP', 'MySQL', 'JavaScript'],
    link: 'https://arreglosazucena.com/',
  },
  {
    title: 'Sitio web de Restaurante',
    description: 'Sitio web completo con menú interactivo y formulario de reservas. ',
    tags: ['HTML5', 'CSS3', 'JavaScript'],
    github: 'https://github.com/danielbecee/restauranteV2',
  },
];
---

<Layout title="Inicio">
  <Header />
  
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="min-h-screen flex items-center justify-center px-6 relative overflow-hidden">
      <!-- Background with animated particles -->
      <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-slate-900 to-blue-900/20"></div>
      <div class="absolute inset-0 overflow-hidden">
        <div class="particle particle-1"></div>
        <div class="particle particle-2"></div>
        <div class="particle particle-3"></div>
        <div class="particle particle-4"></div>
        <div class="particle particle-5"></div>
        <div class="particle particle-6"></div>
      </div>
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl animate-pulse-slow"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-cyan-500/10 rounded-full blur-3xl animate-pulse-slow" style="animation-delay: 2s;"></div>
      
      <div class="relative z-10 max-w-4xl mx-auto text-center">
        <p class="text-cyan-400 font-medium mb-4 animate-fade-in">Hola, soy</p>
        <h1 class="text-5xl md:text-7xl font-bold mb-6 animate-slide-up">
          Daniel Becerra
        </h1>
        <h2 class="text-2xl md:text-3xl text-slate-400 mb-8" id="typing-text">
          <span class="gradient-text font-semibold">Desarrollador Web Full-Stack</span>
        </h2>
        <p class="text-lg text-slate-400 max-w-xl mx-auto mb-10">
          
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/work" class="btn-primary px-8 py-3 rounded-lg text-white font-medium">
            Ver experiencia
          </a>
          <a href="/assets/CV Daniel Becerra P.pdf" download class="px-8 py-3 rounded-lg border border-slate-600 text-slate-300 font-medium hover:border-cyan-400 hover:text-cyan-400 transition-all">
            Descargar CV
          </a>
        </div>
      </div>
    </section>

    <!-- About Me Brief -->
    <section class="py-20 px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold mb-8">
          <span class="gradient-text">Sobre mí</span>
        </h2>
        <div class="glass rounded-xl p-8">
          <p class="text-slate-300 text-lg leading-relaxed mb-6">
            Soy un desarrollador web con experiencia en proyectos reales, capaz de trabajar tanto en 
            <strong class="text-white">backend</strong> como en <strong class="text-white">frontend</strong>. 
            Desarrollo aplicaciones completas desde la base de datos hasta la interfaz de usuario.
          </p>
          <p class="text-slate-300 text-lg leading-relaxed mb-8">
            Mi experiencia incluye desarrollo backend con PHP/Laravel y MySQL, así como frontend con HTML5, CSS3 y JavaScript. 
            Me adapto a las necesidades del proyecto, ya sea trabajando en el servidor o en la interfaz.
          </p>
          <div class="flex flex-wrap gap-3">
            {skills.map((skill) => (
              <span class={`px-4 py-2 rounded-lg text-sm font-medium ${
                skill.category === 'backend' ? 'bg-blue-500/10 text-blue-400 border border-blue-500/20' :
                skill.category === 'frontend' ? 'bg-cyan-500/10 text-cyan-400 border border-cyan-500/20' :
                'bg-purple-500/10 text-purple-400 border border-purple-500/20'
              }`}>
                {skill.name}
              </span>
            ))}
          </div>
        </div>
        <div class="mt-8 text-center">
          <a href="/work" class="inline-flex items-center gap-2 text-cyan-400 hover:text-cyan-300 transition-colors font-medium">
            Ver mi experiencia completa
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Featured Projects -->
    <section class="py-20 px-6">
      <div class="max-w-6xl mx-auto">
        <div class="flex justify-between items-center mb-12">
          <h2 class="text-3xl font-bold">
            <span class="gradient-text">Proyectos Destacados</span>
          </h2>
          <a href="/projects" class="text-cyan-400 hover:text-cyan-300 transition-colors font-medium">
            Ver todos →
          </a>
        </div>
        <div class="grid md:grid-cols-2 gap-8">
          {featuredProjects.map((project) => (
            <article class="glass rounded-xl overflow-hidden card-hover group">
              <div class="h-48 bg-gradient-to-br from-blue-600 to-cyan-600 flex items-center justify-center">
                <svg class="w-16 h-16 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
                </svg>
              </div>
              <div class="p-6">
                <h3 class="text-xl font-bold text-white mb-2 group-hover:text-cyan-400 transition-colors">
                  {project.title}
                </h3>
                <p class="text-slate-400 mb-4">{project.description}</p>
                <div class="flex flex-wrap gap-2 mb-4">
                  {project.tags.map((tag) => (
                    <span class="px-3 py-1 bg-slate-700 text-slate-300 text-sm rounded-full">
                      {tag}
                    </span>
                  ))}
                </div>
                <div class="flex gap-4">
                  {project.link && (
                    <a 
                      href={project.link} 
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-flex items-center gap-2 text-cyan-400 hover:text-cyan-300 transition-colors"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                      </svg>
                      Ver web
                    </a>
                  )}
                  {project.github && (
                    <a 
                      href={project.github} 
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-flex items-center gap-2 text-cyan-400 hover:text-cyan-300 transition-colors"
                    >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
                      </svg>
                      Código
                    </a>
                  )}
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- Latest Blog / CTA Section -->
    <section class="py-20 px-6">
      <div class="max-w-4xl mx-auto text-center glass rounded-2xl p-12">
        <h2 class="text-3xl font-bold text-white mb-4">¿Quieres saber más?</h2>
        <p class="text-slate-400 mb-8 max-w-xl mx-auto">
          Visita mi blog donde comparto lo que aprendo sobre desarrollo web, 
          buenas prácticas y mi experiencia en proyectos reales.
        </p>
        <a href="/blog" class="btn-primary px-8 py-3 rounded-lg text-white font-medium inline-block">
          Ir al Blog
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<script>
  const roles = ['Desarrollador Web', 'Backend & Frontend', 'PHP & Laravel', 'JavaScript & CSS'];
  let roleIndex = 0;
  let charIndex = 0;
  let isDeleting = false;
  const typingElement = document.querySelector('#typing-text span');
  
  function typeEffect() {
    const currentRole = roles[roleIndex];
    
    if (isDeleting) {
      charIndex--;
    } else {
      charIndex++;
    }
    
    if (typingElement) {
      typingElement.textContent = currentRole.substring(0, charIndex);
    }
    
    let typeSpeed = isDeleting ? 50 : 100;
    
    if (!isDeleting && charIndex === currentRole.length) {
      typeSpeed = 2000;
      isDeleting = true;
    } else if (isDeleting && charIndex === 0) {
      isDeleting = false;
      roleIndex = (roleIndex + 1) % roles.length;
      typeSpeed = 500;
    }
    
    setTimeout(typeEffect, typeSpeed);
  }
  
  typeEffect();
</script>
