---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const workExperience = [
  {
    period: 'Enero 2025 – Febrero 2026',
    company: 'Arreglos Azucena',
    role: 'Desarrollador Web Full-Stack',
    tech: 'PHP | MySQL | JavaScript | HTML/CSS',
    description: 'Desarrollo integral del sitio web profesional actualmente en producción. Responsable de toda la arquitectura, desde la base de datos hasta la interfaz de usuario.',
    responsibilities: [
      'Desarrollo backend con PHP, implementando arquitectura MVC para mejor mantenibilidad del código.',
      'Diseño y gestión de base de datos MySQL, creando esquemas optimizados para el rendimiento.',
      'Implementación de funcionalidades CRUD completas para gestión de productos y contenido.',
      'Integración frontend con HTML5, CSS3 y JavaScript vanilla para interactividad.',
      'Diseño responsive adaptado a todos los dispositivos (móvil, tablet, desktop).',
      'Despliegue y configuración del servidor de producción.',
      'Mantenimiento continuo y mejoras basadas en feedback del cliente.',
    ],
    link: 'https://arreglosazucena.com/',
  },
  {
    period: 'Febrero 2025 – Junio 2025',
    company: 'Timtul',
    role: 'Desarrollador Frontend',
    tech: 'HTML5 | CSS3 | JavaScript | LESS',
    description: 'Desarrollo de interfaces web modernas en un entorno de agencia digital. Colaboración en múltiples proyectos con enfoque en experiencia de usuario.',
    responsibilities: [
      'Desarrollo de interfaces web modernas siguiendo las últimas tendencias de diseño.',
      'Maquetación con HTML5 semántico y CSS3 avanzado (Flexbox, Grid).',
      'Implementación de JavaScript para interactividad y validación de formularios.',
      'Estilado avanzado con preprocesador LESS CSS para código más mantenible.',
      'Aplicación de buenas prácticas de diseño responsivo y mobile-first.',
      'Optimización de rendimiento y accesibilidad web (WCAG).',
      'Trabajo en equipo usando metodologías ágiles.',
    ],
  },
];

const education = [
  {
    period: '2023 – 2025',
    institution: 'Centro de Formación Profesional',
    title: 'Técnico Superior en Desarrollo de Aplicaciones Web (DAW)',
    description: 'Formación completa en desarrollo web full-stack, bases de datos, y despliegue de aplicaciones.',
  },
];
---

<Layout title="Trabajo">
  <Header />
  
  <main class="pt-24 pb-20 px-6">
    <div class="max-w-4xl mx-auto">
      <!-- Page Header -->
      <header class="mb-16">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          <span class="gradient-text">Experiencia Laboral</span>
        </h1>
        <p class="text-slate-400 text-lg max-w-2xl">
          Mi trayectoria profesional como desarrollador web, trabajando en proyectos reales 
          tanto en backend como en frontend.
        </p>
      </header>

      <!-- Work Experience Timeline -->
      <section class="mb-20">
        <div class="space-y-12">
          {workExperience.map((job) => (
            <article class="relative pl-8 border-l-2 border-slate-700 hover:border-cyan-500 transition-colors">
              <div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-slate-900 border-2 border-cyan-500"></div>
              
              <div class="glass rounded-xl p-8">
                <div class="flex flex-wrap items-start justify-between gap-4 mb-4">
                  <div>
                    <span class="text-cyan-400 text-sm font-medium">{job.period}</span>
                    <h3 class="text-2xl font-bold text-white mt-1">{job.company}</h3>
                    <p class="text-slate-300 font-medium">{job.role}</p>
                  </div>
                  {job.link && (
                    <a 
                      href={job.link} 
                      target="_blank" 
                      rel="noopener noreferrer"
                      class="inline-flex items-center gap-2 text-cyan-400 hover:text-cyan-300 transition-colors text-sm"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                      </svg>
                      Ver proyecto
                    </a>
                  )}
                </div>
                
                <div class="flex flex-wrap gap-2 mb-4">
                  {job.tech.split(' | ').map((t) => (
                    <span class="px-3 py-1 bg-slate-700/50 text-slate-300 text-xs rounded-full">
                      {t}
                    </span>
                  ))}
                </div>
                
                <p class="text-slate-300 mb-6 leading-relaxed">{job.description}</p>
                
                <ul class="space-y-3">
                  {job.responsibilities.map((resp) => (
                    <li class="flex items-start gap-3 text-slate-400">
                      <svg class="w-5 h-5 text-cyan-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      <span>{resp}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </article>
          ))}
        </div>
      </section>

      <!-- Education Section -->
      <section>
        <h2 class="text-3xl font-bold mb-8">
          <span class="gradient-text">Formación</span>
        </h2>
        
        <div class="space-y-6">
          {education.map((edu) => (
            <article class="glass rounded-xl p-8">
              <span class="text-cyan-400 text-sm font-medium">{edu.period}</span>
              <h3 class="text-xl font-bold text-white mt-1">{edu.title}</h3>
              <p class="text-slate-300 mt-1">{edu.institution}</p>
              <p class="text-slate-400 mt-4">{edu.description}</p>
            </article>
          ))}
        </div>
      </section>

      <!-- Skills Summary -->
      <section class="mt-20">
        <h2 class="text-3xl font-bold mb-8">
          <span class="gradient-text">Stack Técnico</span>
        </h2>
        
        <div class="grid md:grid-cols-2 gap-6">
          <div class="glass rounded-xl p-6">
            <h3 class="text-lg font-bold text-white mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2"/>
              </svg>
              Backend
            </h3>
            <div class="flex flex-wrap gap-2">
              {['PHP', 'Laravel', 'MySQL', 'APIs REST', 'MVC'].map((skill) => (
                <span class="px-3 py-1.5 bg-blue-500/10 text-blue-400 text-sm rounded-lg border border-blue-500/20">
                  {skill}
                </span>
              ))}
            </div>
          </div>
          
          <div class="glass rounded-xl p-6">
            <h3 class="text-lg font-bold text-white mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              Frontend
            </h3>
            <div class="flex flex-wrap gap-2">
              {['HTML5', 'CSS3', 'JavaScript', 'Responsive Design', 'LESS'].map((skill) => (
                <span class="px-3 py-1.5 bg-cyan-500/10 text-cyan-400 text-sm rounded-lg border border-cyan-500/20">
                  {skill}
                </span>
              ))}
            </div>
          </div>
          
          <div class="glass rounded-xl p-6">
            <h3 class="text-lg font-bold text-white mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"/>
              </svg>
              Base de Datos
            </h3>
            <div class="flex flex-wrap gap-2">
              {['MySQL', 'Diseño de esquemas', 'Optimización', 'CRUD'].map((skill) => (
                <span class="px-3 py-1.5 bg-green-500/10 text-green-400 text-sm rounded-lg border border-green-500/20">
                  {skill}
                </span>
              ))}
            </div>
          </div>
          
          <div class="glass rounded-xl p-6">
            <h3 class="text-lg font-bold text-white mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              Herramientas
            </h3>
            <div class="flex flex-wrap gap-2">
              {['Git', 'GitHub', 'Postman', 'VS Code', 'WAMP'].map((skill) => (
                <span class="px-3 py-1.5 bg-purple-500/10 text-purple-400 text-sm rounded-lg border border-purple-500/20">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>

  <Footer />
</Layout>
