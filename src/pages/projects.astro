---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const projects = [
  {
    title: 'Arreglos Azucena',
    description: 'Sitio web profesional para negocio de arreglos de ropa. Desarrollo backend con PHP, gestión de base de datos MySQL, diseño responsive y despliegue en producción.',
    tags: ['PHP', 'MySQL', 'HTML5', 'CSS3', 'JavaScript'],
    category: 'php',
    link: 'https://arreglosazucena.com/',
    featured: true,
  },
  {
    title: 'Foro',
    description: 'Landing page para un producto ficticio, con diseño moderno y llamadas a la acción efectivas. Enfoque en optimización para conversiones y experiencia de usuario.',
    tags: ['HTML5', 'CSS3', 'LESS'],
    category: 'html-css',
    github: 'https://github.com/danielbecee/foro',
  },
  {
    title: 'App de Tareas',
    description: 'Aplicación para gestionar tareas diarias con almacenamiento local y funcionalidades de filtrado. Incluye funciones de arrastrar y soltar, categorías y fechas límite.',
    tags: ['HTML5', 'CSS3', 'JavaScript'],
    category: 'javascript',
    github: 'https://github.com/ManavKumarSharma/M12_PR03_BcnRestaurante_BecerraDaniel_MonrabalCristian_MonteroPol_SharmaManav',
  },
  {
    title: 'Sitio web de Restaurante',
    description: 'Sitio web completo para un restaurante ficticio, con menú interactivo, galería de imágenes y formulario de reservas funcional.',
    tags: ['HTML5', 'CSS3', 'JavaScript'],
    category: 'javascript',
    github: 'https://github.com/danielbecee/restauranteV2',
  },
  {
    title: 'Portafolio Personal',
    description: 'Este mismo portafolio construido con Astro y Tailwind CSS. Diseño moderno, modo oscuro y sistema de blog integrado.',
    tags: ['Astro', 'Tailwind CSS', 'TypeScript'],
    category: 'astro',
    github: 'https://github.com/danielbecee/miportafolio-',
  },
];

const categories = [
  { id: 'all', label: 'Todos' },
  { id: 'php', label: 'PHP' },
  { id: 'html-css', label: 'HTML/CSS' },
  { id: 'javascript', label: 'JavaScript' },
  { id: 'astro', label: 'Astro' },
];
---

<Layout title="Proyectos" description="Explora los proyectos desarrollados por Daniel Becerra">
  <Header />
  
  <main class="pt-28 pb-20">
    <div class="max-w-6xl mx-auto px-6">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">
        Mis <span class="gradient-text">Proyectos</span>
      </h1>
      <p class="text-lg text-slate-400 mb-12 max-w-2xl">
        Aquí puedes encontrar algunos de los proyectos en los que he trabajado. 
        Cada proyecto refleja mi pasión por el desarrollo y mi compromiso con la calidad.
      </p>

      <!-- Filter -->
      <div class="flex flex-wrap gap-3 mb-12">
        {categories.map((cat) => (
          <button 
            class="filter-btn px-5 py-2 rounded-full border border-slate-700 text-slate-300 hover:border-cyan-400 hover:text-cyan-400 transition-all data-[active=true]:bg-cyan-400 data-[active=true]:text-slate-900 data-[active=true]:border-cyan-400"
            data-filter={cat.id}
            data-active={cat.id === 'all' ? 'true' : 'false'}
          >
            {cat.label}
          </button>
        ))}
      </div>

      <!-- Projects Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8" id="projects-grid">
        {projects.map((project) => (
          <article 
            class="project-card glass rounded-xl overflow-hidden card-hover group"
            data-category={project.category}
          >
            <div class="h-40 bg-gradient-to-br from-blue-600 to-cyan-600 flex items-center justify-center">
              <svg class="w-12 h-12 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
              </svg>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-bold text-white mb-2 group-hover:text-cyan-400 transition-colors">
                {project.title}
              </h3>
              <p class="text-slate-400 text-sm mb-4 line-clamp-3">{project.description}</p>
              <div class="flex flex-wrap gap-2 mb-4">
                {project.tags.map((tag) => (
                  <span class="px-2 py-1 bg-slate-700 text-slate-300 text-xs rounded-full">
                    {tag}
                  </span>
                ))}
              </div>
              <div class="flex gap-4">
                {project.link && (
                  <a 
                    href={project.link} 
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 text-cyan-400 hover:text-cyan-300 transition-colors text-sm"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                    </svg>
                    Ver web
                  </a>
                )}
                {project.github && (
                  <a 
                    href={project.github} 
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 text-cyan-400 hover:text-cyan-300 transition-colors text-sm"
                  >
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
                    </svg>
                    Código
                  </a>
                )}
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<script>
  const filterBtns = document.querySelectorAll('.filter-btn');
  const projectCards = document.querySelectorAll('.project-card');
  
  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      filterBtns.forEach(b => b.setAttribute('data-active', 'false'));
      btn.setAttribute('data-active', 'true');
      
      const filter = btn.getAttribute('data-filter');
      
      projectCards.forEach(card => {
        const category = card.getAttribute('data-category');
        if (filter === 'all' || category === filter) {
          card.style.display = 'block';
        } else {
          card.style.display = 'none';
        }
      });
    });
  });
</script>
